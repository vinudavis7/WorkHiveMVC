@model Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4 class="text-center"> Profile</h4>
<hr />
<br />
<br />
<div>
    <form class="form-horizontal" method="POST" action="/Client/EditProfile">

        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Name:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.UserName,new { @class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Phone:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.PhoneNumber,new { @class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Email,new { @class = "form-control"})
                    </div>
                </div>

            </div>
            <div class="col-md-5">
                <div class="box">

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Location:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Location,new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">ProfileImage:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.ProfileImage,new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Password:</label>
                        <div class="col-sm-10">
                            @*                            @Html.TextBoxFor(model => model.UserDetails.Password,new { @class = "form-control"})
                            *@
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-1"></div>
        </div>
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="col-md-5"></div>
        </div>
    </form>
</div>

