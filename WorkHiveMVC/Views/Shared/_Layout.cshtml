@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor
@{
    var loggedInUserType = Accessor.HttpContext.Session.GetString("loggedInUserType");
    var loggedInUserName = Accessor.HttpContext.Session.GetString("loggedInUserName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WorkHiveMVC</title>
    @*    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkHiveMVC.styles.css" asp-append-version="true" />
    @*  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">*@
    <script src="https://kit.fontawesome.com/8ec6cfe396.js" crossorigin="anonymous"></script>
    @*
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>*@

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    *@
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-info navbar-dark">
          @*  <div class="col-md-2">*@
                <a class="navbar-brand" href="/Home/Index">
                    <img src="~/images/logo1.png" alt="Logo" style="width:40px;">
                </a>
          @*  </div>*@
            <div class="collapse navbar-collapse" id="mynavbar">
                @if (loggedInUserType == "Freelancer")
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Freelancer/Profile">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Freelancer/EditProfile">Edit My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Freelancer/ViewProposals">My Proposals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Earnings</a>
                        </li>

                    </ul>
                }
                else if(loggedInUserType == "Client")
                {
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" href="/Client/Myjobs">My Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Client/Bids"> Bids</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Client/EditProfile"> My Profile</a>
                        </li>
                    </ul>
                }

                
            </div>
            <form class="d-flex ">



                @if (!string.IsNullOrEmpty(loggedInUserName) )
                {
                    <p>Welcome @loggedInUserName </p>
                    <a href="/User/Logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a>

                }
                else
                {
                    <a href="#" class="link-nav" data-toggle="modal" data-target="#myModalLogin"><span class="glyphicon glyphicon-log-in"></span> Login</a>
                    <a href="#" class="link-nav" data-toggle="modal" data-target="#myModalRegister"><span class="glyphicon glyphicon-log-in"></span> Register</a>

                }
            </form>


        </nav>
        @*    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
        <div class="navbar-header">
        <a class="navbar-brand" href="#">Work Hive </a>
        </div>

        <ul class="nav navbar-nav navbar-right">

        <li><a href="#" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        <li><a href="#" data-toggle="modal" data-target="#myModalRegister"><span class="glyphicon glyphicon-log-in"></span> Register</a></li>

        </ul>
        </div>
        </nav>*@

    </header>
    <div class="container-landing">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="loader" style="display:none"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WorkHiveMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @{
        Html.RenderPartial("~/Views/User/Login.cshtml");
        Html.RenderPartial("~/Views/User/Register.cshtml");
    }

   

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
